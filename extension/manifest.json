{
  "manifest_version": 3,
  "name": "Burnout & Stress Tracker",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/"],
  "web_accessible_resources": [
    {
      "resources": ["assets/whiteIcon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
